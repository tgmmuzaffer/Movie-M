@using Movie_M.Client.Models
@model SearhMovie
@{
    if (Model.Search.Count() < 2)
    {
        <style>
            .row {
                margin-right: -15px;
                margin-left: -15px;
                text-align: -webkit-center;
                display: flow-root;
            }
        </style>
    }
}

<style>
    .ptitle {
        margin-left: 9%;
        padding-top: 1%;
        padding-bottom: 1%;
        color: white;
    }

    hr {
        border: 0;
        clear: both;
        display: block;
        width: 96%;
        background-color: #28527A;
        height: 0.5px;
    }
</style>


@{
    if (Model.Search.Count > 1)
    {
        <div class="banner-area banner-inner-1 bg-black" id="banner">
            <div class="banner-inner pt-5">
                <div class="container">
                    <h1 class="ptitle">@ViewBag.Title</h1>

                    @foreach (var item in Model.Search)
                    {


                        <div class="row" style="margin-bottom:15px;">
                            <div class="col-lg-4">
                                <div class="thumb after-left-top">
                                    @if (item.Poster == "N/A")
                                    {
                                        <img loading="lazy" src="~/assets/img/18fe0f17182720.5603babf77bc9.jpg" style="height:auto; max-width:260px;"/>
                                    }
                                    else
                                    {
                                        <img loading="lazy" src="@item.Poster" alt="img">
                                    }
                                </div>
                            </div>
                            <div class="col-lg-4 align-self-center">
                                <div class="banner-details mt-4 mt-lg-0">
                                    <div class="post-meta-single">
                                        <ul>
                                            <li><a class="tag-base tag-blue" href="#">@item.Type</a></li>
                                            <li class="date"><i class="fa fa-clock-o"></i>@item.Year</li>
                                        </ul>
                                    </div>
                                    <h2> <a href="/search-imdb-id/@item.imdbID">@item.Title</a></h2>


                                </div>
                            </div>

                        </div>
                        <hr />
                    }


                </div>
            </div>
        </div>

    }
    else
    {
        <div class="tranding-area pd-top-75 pd-bottom-50">
            <div class="container">
                <div class="section-title style-two">
                    <div class="row">
                        <div class="col-md-3">
                            <h6 class="title">Watch List</h6>
                        </div>

                    </div>
                </div>
                <div class="tab-content" id="ex2-content">
                    <div class="tab-pane fade show active" id="ex2-tabs-1" role="tabpanel">
                        <div class="row">
                            <h4>We Can Not Found AnyThink!</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

