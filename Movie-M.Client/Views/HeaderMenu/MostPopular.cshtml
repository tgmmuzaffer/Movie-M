@using Movie_M.Client.Models
@model MostPopularList
@{

    if (Model.items.Count() < 1)
    {
        <style>
            .row {
                margin-right: -15px;
                margin-left: -15px;
                text-align: -webkit-center;
                display: flow-root;
            }
        </style>
    }
    <style>
        .ptitle {
            margin-left: 7%;
            margin-top: 1%;
        }
    </style>

}
@foreach (var item in Model.items)
{
    <div class="banner-area banner-inner-1 bg-black" id="banner">
        <!-- banner area start -->
        <div class="banner-inner pt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="thumb after-left-top">

                            <img loading="lazy" src="@item.image" alt="img">
                        </div>
                    </div>
                    <div class="col-lg-1">
                    </div>
                    <div class="col-lg-7 align-self-center">
                        <div class="banner-details mt-4 mt-lg-0">
                            <div class="post-meta-single">
                                <ul>

                                    <li><a class="tag-base tag-blue" href="#">Rank : @item.rank</a></li>
                                    @if (item.rankUpDown.Contains("+"))
                                    {
                                        <li>Rank Up & Down :  <i class="fa fa-arrow-up" aria-hidden="true" style="font-size: xx-large; color: #FFA900"></i> @item.rankUpDown</li>
                                    }
                                    else if (item.rankUpDown.Contains("-"))
                                    {
                                        <li>Rank Up & Down :  <i class="fa fa-arrow-down" aria-hidden="true" style="font-size: xx-large; color: #FFA900"></i>@item.rankUpDown</li>
                                    }
                                    else
                                    {
                                        <li>Rank Up & Down :  <i class="fa fa-minus" aria-hidden="true" style="font-size: xx-large; color: #FFA900"></i>@item.rankUpDown</li>
                                    }

                                    <li class="date"><i class="fa fa-clock-o"></i>@item.year</li>
                                </ul>
                            </div>
                            <h2> <a href="/search-imdb-id/@item.id">@item.title</a></h2>
                            <p style="word-wrap:normal">@item.crew</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- banner area end -->
    </div>

}
