@using Movie_M.Client.Models
@model Detail
@{
    var avarage = "";
    var avarag = "";
    if (Model.rating.average != null)
    {
        avarage = (Model.rating.average * 10).ToString() + "%";
        avarag = (Model.rating.average * 10).ToString();
    }

}
<style>
    img.card-img.test {
        width: 100%;
        object-fit: cover;
        object-position: 0px 20%;
    }
</style>


<div class="card bg-dark text-white">
    <img src="@Model.image.original" class="card-img test" alt="..." style="height:300px">
    <div class="card-img-overlay mt-3">
        <h5 class="card-title">@Model.name</h5>
    </div>
</div>
@{
    if (Model.rating.average != null)
    {
        <div class="progress mt-3">
            <div class="progress-bar" role="progressbar" style="width: @avarage" aria-valuenow="@avarage" aria-valuemin="0" aria-valuemax="100">@avarag</div>
        </div>
    }
}

<div class="col-3 bg-light p-3 border mt-3">
    .col-3: width of 25%
</div>
<div class="col-3 bg-light p-3 border">
    .col-3: width of 25%
</div>
<div class="col-3 bg-light p-3 border">
    .col-3: width of 25%
</div>

<div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight">Flex item</div>
    <div class="p-2 bd-highlight">Flex item</div>
    <div class="p-2 bd-highlight">Third flex item</div>
</div>